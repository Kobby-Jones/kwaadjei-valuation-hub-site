          <li><a href="#"><i class="fa fa-angle-right"></i> Case Studies</a></li>
        </ul>
      </div>
    
      <!-- Recent Posts Widget (Static Placeholders) -->
      <div class="sidebar-widget recent-posts-widget">
        <h4>Recent Posts</h4>
        
        {# Loop through the latest 3 posts from the collection #}
        {% set latestPosts = collections.post | head(3) %}
        {% for post in latestPosts %}
        <div class="recent-post-item">
           <img src="{{ post.data.image | url }}" alt="{{ post.data.title }}">
           <div class="post-info">
             <span>{{ post.date | readableDate }}</span>
             <a href="{{ post.url | url }}">{{ post.data.title }}</a>
           </div>
        </div>
        {% else %}
          <p>No recent posts available.</p>
        {% endfor %}
    
      </div>
    
    </div>
    
