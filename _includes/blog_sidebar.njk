    <div class="blog-sidebar">
    
      <!-- Search Widget -->
      <div class="sidebar-widget search-widget">
        <h4>Search Blog</h4>
        <form action="#"> {# Basic form, search won't work without JS/backend #}
          <input type="text" placeholder="Search...">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </div>
    
      <!-- Categories Widget (Static for now, can be made dynamic) -->
      <div class="sidebar-widget categories-widget">
        <h4>Categories</h4>
        <ul>
          <li><a href="#"><i class="fa fa-angle-right"></i> Valuation Insights</a></li>
          <li><a href="#"><i class="fa fa-angle-right"></i> Land Management</a></li>
          <li><a href="#"><i class="fa fa-angle-right"></i> Property Market Trends</a></li>
