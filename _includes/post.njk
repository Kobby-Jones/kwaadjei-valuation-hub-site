---
layout: "base.njk" 
---
    
{# 
This is the layout for a single blog post. 
It inherits from base.njk and defines the structure 
for displaying content from the Markdown files.
#}

<!-- ***** Main Banner Area Start (Using Post Title) ***** -->
<div class="about-main-content" style="background-image: url('{{ image | url }}'); position: relative;">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <!-- Content wrapper positioned above the overlay -->
        <div class="content text-center" style="position: relative; z-index: 2; color: #fff;">
          <h4>{{ category | default("Blog Post") }}</h4>
          <div class="line-dec" style="border-color: #fff;"></div>
          <h2>{{ title }}</h2>
          <div class="post-meta-banner" style="margin-top: 15px; font-size: 14px; color: #fff;">
              <i class="fa fa-calendar"></i> {{ date | readableDate }} 
              <span style="margin: 0 10px;">|</span>
              <i class="fa fa-user"></i> {{ author | default("Kwaadjei Valuation Hub") }}
          </div>
        </div>

        <!-- Overlay: behind the text -->
        <div class="blur-bg" style="background: rgba(0,0,0,0.5); position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1;"></div>
      </div>
    </div>
  </div>
</div>
<!-- ***** Main Banner Area End ***** -->


<!-- ***** Blog Post Section Start ***** -->
<div class="blog-post-section">
<div class="container">
  <div class="row">
    <!-- Main Content Column -->
    <div class="col-lg-8">
      <div class="blog-post-content">
        
        {# The main content from the Markdown file goes here #}
        {{ content | safe }}

        <!-- Tags (Optional) -->
        {% if tags %}
        <div class="post-tags">
          <strong class="text-dark">Tags:</strong> 
          {% for tag in tags %}
            <span>{{ tag }}</span>
          {% endfor %}
        </div>
        {% endif %}

      </div>
    </div>

    <!-- Sidebar Column -->
    <div class="col-lg-4">
      {% include "blog_sidebar.njk" %} {# Include the sidebar partial #}
    </div>
  </div>
</div>
</div>
<!-- ***** Blog Post Section End ***** -->

{# Include the standard CTA partial #}
{% include "cta.njk" %}

