.experience-section {
  background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 100%);
  position: relative;
  padding: 4rem 0;
}

.experience-card-redesign {
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.experience-card-redesign:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
}

/* Card Image Section */
.experience-card-image {
  position: relative;
  width: 100%;
  height: 200px;
  overflow: hidden;
}

.experience-card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.experience-card-redesign:hover .experience-card-image img {
  transform: scale(1.1);
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(27, 94, 32, 0.7) 100%);
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.experience-card-redesign:hover .card-overlay {
  opacity: 0.8;
}

/* Card Content Section */
.experience-card-content {
  padding: 1.5rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.experience-card-content h5 {
  font-size: 1.125rem;
  font-weight: 700;
  color: #1b5e20;
  margin-bottom: 0.75rem;
  line-height: 1.3;
  min-height: 2.6em;
}

.client-info {
  font-size: 0.875rem;
  font-weight: 600;
  color: #4caf50;
  margin-bottom: 0.25rem;
  line-height: 1.4;
}

.project-type {
  font-size: 0.8125rem;
  color: #666;
  margin-bottom: 1rem;
  padding-bottom: 0.75rem;
  border-bottom: 1px solid #f0f0f0;
}

/* Service List */
.service-list {
  list-style: none;
  padding: 0;
  margin: 0 0 auto 0;
  flex: 1;
}

.service-list li {
  font-size: 0.875rem;
  color: #333;
  padding: 0.5rem 0;
  line-height: 1.5;
  display: flex;
  align-items: flex-start;
  gap: 0.5rem;
}

.service-list li i {
  color: #4caf50;
  font-size: 0.875rem;
  margin-top: 0.125rem;
  flex-shrink: 0;
}

/* Button Styling */
.experience-card-content .btn-success {
  background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 100%);
  border: none;
  color: white;
  font-weight: 600;
  padding: 0.625rem 1rem;
  border-radius: 6px;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-size: 0.8125rem;
}

.experience-card-content .btn-success:hover {
  background: linear-gradient(135deg, #0d3d13 0%, #1b5e20 100%);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(27, 94, 32, 0.4);
}

/* Responsive Design */
@media (max-width: 991px) {
  .experience-card-image {
    height: 180px;
  }
  
  .experience-card-content {
    padding: 1.25rem;
  }
  
  .experience-card-content h5 {
    font-size: 1rem;
    min-height: auto;
  }
}

@media (max-width: 767px) {
  .experience-section {
    padding: 3rem 0;
  }
  
  .experience-card-image {
    height: 220px;
  }
  
  .experience-card-content h5 {
    font-size: 1.125rem;
  }
}

/* Loading state for images */
.experience-card-image img {
  background: #f0f0f0;
}

/* Alternative: If images don't load, show placeholder color */
.experience-card-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  z-index: 0;
}

.experience-card-image img {
  position: relative;
  z-index: 1;
}
/* Quick Fix for Experience Card Colors */
.experience-card-content h5 {
  color: #1b5e20 !important;
}

.client-info {
  color: #1b5e20 !important;
}

.project-type {
  color: #333 !important;
}
